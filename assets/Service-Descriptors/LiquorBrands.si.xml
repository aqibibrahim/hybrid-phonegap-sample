<service-descriptor>
    
    <property name="name">SIMINOV-HYBRID-LIQUOR-BRANDS-SERVICE</property>
    <property name="description">Siminov Hybrid Liquor Brands Service</property>
    <property name="protocol">HTTP</property>
    <property name="instance">siminov.com</property>
    <property name="port">80</property>
    <property name="context">ws</property>    
    

    <requests>
     	<request>

        	<property name="name">GET-LIQUOR-BRANDS</property>
         	<property name="type">GET</property>
         	<property name="api">get_brands.php</property>
         	<property name="handler">GetLiquorBrands</property>
	     	<property name="mode">SYNC</property>

	     	<query-parameters>
	     	    <query-parameter>
	     	        <property name="name">name</property>
	     	        <property name="value">{@resource LIQUOR-NAME}</property>
	     	    </query-parameter>
	     	</query-parameters>
	     	
	      	<header-parameters>
	        	<header-parameter>
	        	    <property name="name">Accept</property>
	        	    <property name="value">application/xml</property>
	        	</header-parameter>
	          	<header-parameter>
	          	    <property name="name">Content-Type</property>
	          	    <property name="value">application/xml</property>
	          	</header-parameter>
	      	</header-parameters>
     	
		</request>
    </requests>
    
</service-descriptor>
